<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
  "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

	<display-name>Project 1</display-name>

	<description>
		Project 1, CSE 135 Spring 2014
		Author: Nan Chen, Yuxuan Wei
	</description>

	<servlet>
		<servlet-name>browsing</servlet-name>
		<jsp-file>/browsing/browsing.jsp</jsp-file>
	</servlet>

	<servlet>
		<servlet-name>cart</servlet-name>
		<jsp-file>/cart/cart.jsp</jsp-file>
	</servlet>

	<servlet>
		<servlet-name>category</servlet-name>
		<jsp-file>/category/category.jsp</jsp-file>
	</servlet>

	<servlet>
		<servlet-name>confirmation</servlet-name>
		<jsp-file>/confirmation/confirmation.jsp</jsp-file>
	</servlet>

	<servlet>
		<servlet-name>display_category</servlet-name>
		<jsp-file>/display_category/display_category.jsp</jsp-file>
	</servlet>

	<servlet>
		<servlet-name>login</servlet-name>
		<jsp-file>/login/login.jsp</jsp-file>
	</servlet>

	<servlet>
		<servlet-name>order</servlet-name>
		<jsp-file>/order/order.jsp</jsp-file>
	</servlet>

	<servlet>
		<servlet-name>product</servlet-name>
		<jsp-file>/product/product.jsp</jsp-file>
	</servlet>

	<servlet>
		<servlet-name>signup</servlet-name>
		<jsp-file>/signup/signup.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>browsing</servlet-name>
		<url-pattern>/browsing</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>cart</servlet-name>
		<url-pattern>/cart</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>category</servlet-name>
		<url-pattern>/category</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>confirmation</servlet-name>
		<url-pattern>/confirmation</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>display_category</servlet-name>
		<url-pattern>/display_category</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>order</servlet-name>
		<url-pattern>/order</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>product</servlet-name>
		<url-pattern>/product</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>signup</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>
			signup
		</welcome-file>
	</welcome-file-list>	
	
</web-app>
